<?xml version="1.0" encoding="ISO-8859-1"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="default"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<!-- <class>org.acme.Address</class>  -->
		<properties>
			<!--
				Descomente a propriedade abaixo para atualizar o schema do
				banco de dados automaticamente ao iniciar a aplicação. Os
				valores possíveis são:
				validate: Verifica se o schema atual comporta as entidades
						existentes.
				update: Cria tabelas ou adiciona campos conforme necessários.
						Campos renomeados não são removidos, portanto remova o
						campo antigo manualmente.
				create: REcria as tabelas na inicialização. NÃO USE ESTE
						VALOR!!!
				create-drop: cria as tabelas na inicialização e as remove ao
						finalizar a aplicação. NÃO USE ESTE VALOR!!!
            -->

            <!--
				<property name="hibernate.hbm2ddl.auto" value="update"/>
            -->

            <!--
                As configurações comentadas abaixo são para usar um banco de
                dados MySQL local. Descomente somente para testes locais.
            -->
            <!--
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.connection.driver_class"
				value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username"
				value="xdr" />
			<property name="hibernate.connection.password"
				value="xdr" />
			<property name="hibernate.connection.url"
				value="jdbc:mysql://localhost:3306/xdr" />
            -->

			<!--
            -->
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.connection.driver_class"
				value="oracle.jdbc.driver.OracleDriver" />
			<property name="hibernate.connection.url"
				value="jdbc:oracle:thin:@172.24.21.73:1521:XE" />
			<property name="hibernate.connection.username"
				value="SYSTEM" />
			<property name="hibernate.connection.password"
				value="System" />

			<property name="hibernate.max_fetch_depth" value="3" />

			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />

            <!--<property name="hibernate.connection.pool_size" value="5" />-->
            <property name="hibernate.connection.release_mode"
                value="after_transaction" />
            <property name="hibernate.c3p0.max_size" value="50" />
            <property name="hibernate.c3p0.min_size" value="1" />
            <property name="hibernate.c3p0.timeout" value="180" />
            <property name="hibernate.c3p0.max_statements" value="0" />
            <property name="hibernate.c3p0.idle_test_period" value="300" />
            <property name="hibernate.c3p0.acquire_increment" value="1" />

		</properties>
	</persistence-unit>
</persistence>